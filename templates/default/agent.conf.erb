<% # unless templating via a role, use a sane set of defaults -%>
<% if node['logstash']['agent']['inputs'].empty? and node['logstash']['agent']['filters'].empty? and node['logstash']['agent']['outputs'].empty? -%>

input {

  file {
    type => "sample-logs"
    path => ["/var/log/*.log"]
    exclude => ["*.gz"]
    debug => true
  }

}


output {
  stdout { }
<% if @logstash_server_ip.empty? -%>
  # Provide a sane default
  null { }
<% else -%>
  tcp { host => "<%= @logstash_server_ip %>" port => "5959" }
 <% end -%>
}

<% else -%>

input {
<%= hash_to_stash(node['logstash']['agent']['inputs']) %>
}

output {
   <%= hash_to_stash(node['logstash']['agent']['outputs']) %>
}

<% end -%>

