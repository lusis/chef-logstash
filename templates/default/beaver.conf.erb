[beaver]
<% @conf.each do |key, value| -%>
<%= key %>: <%= value %>
<% end -%>

<% @files.each do |file| -%>
<%   file['path'].each do |path| -%>
[<%= path %>]
type: <%= file['type'] || 'file' %>
<% if file.has_key?('format') -%>
format: <%= file['format'] %>
<% end -%>
<% if file.has_key?('tags') -%>
tags: <%= file['tags'].join(',') %>
<% end -%>
<% if file.has_key?('exclude') -%>
exclude: (<%= file['exclude'].join('|') %>)
<% end -%>
<% if file.has_key?('add_field') -%>
add_field: <%= file['add_field'].join(',') %>
<% end -%>
<% if file.has_key?('regex_after') %>
multiline_regex_after: <%= file['regex_after'] %>
<% end %>
<% if file.has_key?('regex_before') %>
multiline_regex_before: <%= file['regex_before'] %>
<% end %>

<% end -%>
<% end -%>
